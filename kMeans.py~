import numpy as np
import cv2

img = cv2.imread('/home/praneeta/Desktop/CVProgs/MyCodes/crop2.jpg')
Z = img.reshape((-1,3))

# convert to np.float32
Z = np.float32(Z)

# define criteria, number of clusters(K) and apply kmeans()
criteria = (cv2.TERM_CRITERIA_EPS + cv2.TERM_CRITERIA_MAX_ITER, 10, 1.0)
#K = 4
ret, label, center = cv2.kmeans(Z, 5, criteria, 10, cv2.KMEANS_RANDOM_CENTERS)

# Now convert back into uint8, and make original image
center = np.uint8(center)
res = center[label.flatten()]
res2 = res.reshape((img.shape))
print res2.dtype
res2 = cv2.cvtColor(res2 , cv2.COLOR_BGR2GRAY)
res2=cv2.equalizeHist(res2)
th = cv2.adaptiveThreshold(res2,255,cv2.ADAPTIVE_THRESH_GAUSSIAN_C,cv2.THRESH_BINARY,31,2)#31 works


#kernel=cv2.getStructuringElement(cv2.MORPH_ELLIPSE,(3,3))
#res3=cv2.erode(th,kernel,iterations=1)
cv2.imshow('res2',res2)
cv2.imshow("thresh", th)
cv2.waitKey(0)

